<Window x:Class="HLXExport.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HLXExport"
        mc:Ignorable="d"
        Title="ConsoleWindow" Height="450" Width="800" Background="#FF313131">
    <Grid>
        <ScrollViewer x:Name="ScrollContainer">
            <TextBlock x:Name="ConsoleTextBuffer" TextWrapping="Wrap" Background="#FF353535" Margin="10,11,10,11" Padding="5,2,0,0" FontFamily="Consolas" Foreground="#FFC1C1C1">
            </TextBlock>

        </ScrollViewer>


    </Grid>
</Window>
