<Window x:Class="HLXExport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HLXExport"
        mc:Ignorable="d"
        Title="MainWindow" Height="663" Width="811"
        SizeToContent="WidthAndHeight" BorderBrush="#FF40B32F" Background="#FFDEDDDD" ResizeMode="NoResize" >

    <Grid Margin="10,10,22,36">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="225*"/>
            <ColumnDefinition Width="554*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.ColumnSpan="2" Margin="-10,-10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="18" Width="73">
            <Menu DockPanel.Dock="Top" Width="191">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="Button_LoadFromSource"/>
                </MenuItem>
                <MenuItem Header="Tools" >
                    <MenuItem Header="CSV Cleaner" Click="Button_ShowCSVTools"/>
                    <MenuItem Header="Debug Console" Click="Button_ShowDebugWindow"/>
                    <MenuItem Header="Clear Data Cache" Click="Button_ClearDataCache"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>


        <Button x:Name="ReportButton" Content="Report Issue" Margin="0,0,1,-26" Click="Button_ReportIssue" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="99" Grid.Column="2"/>
        <Label x:Name="SoftInfo" Content="HLX Export by Angus Barnes - Helix Resources LTD 2022" HorizontalAlignment="Left" Margin="0,0,0,-30" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom" Foreground="#FF7D7D7D" Grid.Column="1" Height="26" Width="306" Grid.ColumnSpan="2"/>
        <Button Content="Open File Location" HorizontalAlignment="Left" Height="22" Margin="339,52,0,0" VerticalAlignment="Top" Width="138" Click="Button_LoadFromSource" Grid.Column="2"/>
        <TextBox  Name="DataSourceLocationPath" HorizontalAlignment="Left" Margin="0,52,0,0" TextWrapping="Wrap" Text="Path To Exported ZIP" VerticalAlignment="Top" Width="552" Height="22" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label x:Name="Step1" Content="Step 1: Locate Exported ZIP" HorizontalAlignment="Left" Margin="0,18,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Grid.Column="1" Height="31" Width="217"/>
        <Label x:Name="StepX" Content="Step X: Choose Export Directory" HorizontalAlignment="Left" Margin="0,535,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Grid.Column="1" Height="31" Width="252" Grid.ColumnSpan="2"/>
        <TextBox  x:Name="DataDestinationLocationPath" HorizontalAlignment="Left" Margin="0,570,0,0" TextWrapping="Wrap" Text="Path to export selected data" VerticalAlignment="Top" Width="609" Height="22" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Select Output Directory" HorizontalAlignment="Left" Height="22" Margin="389,570,0,0" VerticalAlignment="Top" Width="138" Click="Button_SaveToDestination" Grid.Column="2"/>
        <Label x:Name="Step2" Content="Step 2: Select Collar File" HorizontalAlignment="Left" Margin="0,79,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Grid.Column="1" Height="31" Width="189"/>
        <ComboBox Name="ListDisplay" HorizontalAlignment="Left" Margin="0,110,0,0" VerticalAlignment="Top" Width="462" SelectionChanged="UI_CollarFileSelectionChanged" Grid.Column="1" Height="22" Grid.ColumnSpan="2"/>
        <TreeView x:Name="ProjectAreaList" Grid.ColumnSpan="2" Margin="2,194,20,0" Height="336" VerticalAlignment="Top"/>
        <Label x:Name="Step2_Copy" Content="Step 3: Select Project(s) To Include" HorizontalAlignment="Left" Margin="2,136,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Grid.Column="1" Height="31" Width="274" Grid.ColumnSpan="2"/>
        <Label Content="Project List" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="2,167,0,0" VerticalAlignment="Top" Width="106" Height="26"/>
        <DataGrid x:Name="MainGrid" Grid.Column="2" ItemsSource="{Binding}"  Margin="0,194,0,71" AutoGenerateColumns="False" HorizontalAlignment="Center" Width="554" Height="336">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Source Name" Binding="{Binding SourceName}"></DataGridTextColumn>
                <DataGridCheckBoxColumn Header="Include" Binding="{Binding Include}"></DataGridCheckBoxColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Field Name Remapping" HorizontalAlignment="Left" Margin="0,167,0,0" VerticalAlignment="Top" Width="155" Height="26" Grid.Column="2"/>

    </Grid>
</Window>
